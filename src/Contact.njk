<style>
/* Center the form */
.contact-container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 75vh;
}

/* Wider contact box */
.contact-box {
  background: #ffffff;
  padding: 50px 60px;
  border-radius: 14px;
  box-shadow: 0 6px 20px rgba(0,0,0,0.08);
  width: 90%;
  max-width: 800px;
}

/* Input group styling */
.input-group {
  position: relative;
  margin-bottom: 30px;
}

/* Inputs & textarea */
.input-group input,
.input-group textarea {
  width: 100%;
  padding: 14px 16px;
  border: 1.5px solid #ddd;
  border-radius: 8px;
  font-size: 16px;
  background: transparent;
  outline: none;
  transition: border 0.3s ease;
}

/* Floating labels */
.input-group label {
  position: absolute;
  top: 14px;
  left: 18px;
  color: #777;
  background: #fff;
  padding: 0 6px;
  transition: 0.3s ease;
  pointer-events: none;
}

.input-group input:focus + label,
.input-group input:valid + label,
.input-group textarea:focus + label,
.input-group textarea:valid + label {
  top: -9px;
  left: 12px;
  font-size: 13px;
  color: #6c63ff;
}

/* Input focus effect */
.input-group input:focus,
.input-group textarea:focus {
  border-color: #6c63ff;
}

/* Button */
button {
  width: 100%;
  padding: 14px;
  background: #6c63ff;
  border: none;
  border-radius: 8px;
  color: white;
  font-size: 17px;
  cursor: pointer;
  transition: background 0.3s ease;
}

button:hover {
  background: #574bff;
}

/* Responsive */
@media (max-width: 600px) {
  .contact-box {
    padding: 35px 25px;
  }
}

</style>
